<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <Button
        android:id="@+id/seeMemoryButton"
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/marginFromTop"
        android:onClick="showMemories"
        android:text="See Memories" />

    <Button
        android:id="@+id/addMemoryButton"
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_below="@id/seeMemoryButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/topMargin"
        android:onClick="addMemories"
        android:text="Add a Memory" />

    <Button
        android:id="@+id/logOutButton"
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_below="@id/addMemoryButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/topMargin"
        android:onClick="logOutClicked"
        android:text="Log Out" />
</RelativeLayout>